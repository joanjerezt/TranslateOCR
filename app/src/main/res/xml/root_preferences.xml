<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/languages_header">

        <Preference
            app:key="dictionaries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:title="Dictionaries" />
        <CheckBoxPreference
            app:key="words"
            app:defaultValue="false"
            app:title="@string/unknown_title" />
        <CheckBoxPreference
            app:key="ambiguity"
            app:defaultValue="false"
            app:title="Display ambiguous words"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/help_header">
        <Preference
            app:key = "license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:title="License" />
        <Preference
            app:key = "about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:title="About" />
    </PreferenceCategory>

</PreferenceScreen>