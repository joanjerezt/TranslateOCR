<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.history.HistoryFragment">

    <TextView
            android:id="@+id/original_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/translated_text"
            app:layout_constraintEnd_toStartOf="@+id/translated_text"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/translated_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/favourite"
            app:layout_constraintStart_toEndOf="@+id/original_text"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/favourite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_favorite_border_24"
            android:contentDescription="@string/title_favorites"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/translated_text"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>